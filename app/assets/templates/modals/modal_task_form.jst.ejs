<form class="new-instance">
  <div class="unpadded-input-group">
    <div class="form-group">
      <input type="text" class="form-control"
      name="task[name]" value="<%=task.escape('name')%>" placeholder="New Task Name">
    </div>
    <div class="form-group">
      <textarea type="textarea" name="task[body]"
      placeholder="Task Description"
      class="form-control"><%=task.escape('body')%></textarea>
    </div>
  </div>
  <br>
  <button type="submit" class="btn btn-success alt">Save Task</button>
</form>
