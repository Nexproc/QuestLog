<div class="signup-form-container">
  <%= image_tag 'dark-logo.png' %>
  <br>
  <h2><%= head %></h2>
  <form role="form" action="<%= action %>" method="post">
    <%= auth_token %>
    <div class="unpadded-input-group">
      <div class="form-group">
        <input type="text" class="form-control" name="user[username]"
        value="<%=@user.username%>" placeholder="Username">
      </div>
      <div class="form-group">
        <input class="form-control" type="password" name="user[password]" placeholder="Password">
      </div>
    </div>
    <br>
    <div class="form-group" id="new-session">
      <button type="submit" class="btn btn-info form-control"><%= btn %></button>
    </div>
    <% if btn == "Log In!" %>
      <div class="form-group" id="new-user">
        <%= link_to '<div class="btn btn-danger form-control">Sign Up</div>'.html_safe, new_user_url %>
      </div>
    <% end %>
  </form>
</div>
